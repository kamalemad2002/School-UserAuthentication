@{
    ViewData["Title"] = "Decrypted Texts";
    var decryptedTexts = ViewBag.DecryptedTexts as List<string>;
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="text-center">
        <h2>Decrypted Texts</h2>
        <hr />

        @if (decryptedTexts == null || !decryptedTexts.Any())
        {
            <p class="text-danger">No encrypted texts found for this user.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var text in decryptedTexts)
                {
                    <li class="list-group-item">@text</li>
                }
            </ul>
        }

        <a href="/Service/Index" class="btn btn-secondary mt-4">Back to Home</a>
    </div>
</div>
