
@model LoginModel
@if (!string.IsNullOrEmpty(ViewBag.error))
{
    <div class="alert alert-danger text-center">
        @ViewBag.error
    </div>
}
<div class="container">
    <div class="row justify-content-center align-items-center vh-100">
        <div class="col-md-6">
            <form asp-action="Login" asp-controller="User" method="post" id="LoginForm" class="p-4 border rounded shadow">
                <h2 class="text-center mb-4">Login</h2>

                <!-- Error Message -->
                @* @if (!string.IsNullOrEmpty(ViewBag.error)) *@
                @* { *@
                @*     <div class="alert alert-danger text-center"> *@
                @*         @ViewBag.error *@
                @*     </div> *@
                @* } *@

                <!-- Hidden Field for Id -->
                @* <div hidden> *@
                @*     <label asp-for="@Model."></label> *@
                @*     <input asp-for="@Model." class="" /> *@
                @*     <span asp-validation-for="Id"></span> *@
                @* </div> *@

                <!-- Email Field -->
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-between">
                    <input type="submit" class="btn btn-primary" value="Login" />
                    <a href="~/User/Signup" class="btn btn-secondary">Signup</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('LoginForm').addEventListener('submit', function (event) {
        var email = document.getElementById('Email').value;
        var password = document.getElementById('Password').value;

        if (!email || !password) {
            event.preventDefault(); 
            alert('Please fill in all fields.');
        }
    });
</script>
